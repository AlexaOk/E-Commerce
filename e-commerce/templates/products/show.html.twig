{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ product.tags ? product.tags|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ product.date ? product.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                {% for detail in productDetails %}
                    <img src="{{ asset('images/' ~ detail.photo) }}">
                {% endfor %}
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ productDetails.price }}</td>
            </tr>
        </tbody>

    </table>
