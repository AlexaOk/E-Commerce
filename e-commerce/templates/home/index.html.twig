        <li>{{ variantoption.variant.name }} : {{ variantoption.detail }}</li>
        {% endfor %} #}


    {% endfor %}
        </div>
    </div>


<style>
a:link {
    text-decoration:none;
}

/* visited link */
a:visited {
    color: green;
    text-decoration:none;

}

/* mouse over link */
